/* pages/orders/create/create.wxss */
.container {
  padding: 0 0 150rpx 0;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 页面标题 */
.page-header {
  background: white;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-desc {
  font-size: 28rpx;
  color: #666;
}

/* 表单区块 */
.form-section {
  background: white;
  margin-bottom: 20rpx;
  padding: 0 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 0 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.add-product-btn {
  background: #2E7CE8;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
  font-size: 24rpx;
}

.add-product-btn::after {
  border: none;
}

/* 门店选择器 */
.store-selector {
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.store-info {
  padding: 20rpx;
  background: #f0f8ff;
  border-radius: 8rpx;
  border: 1rpx solid #2E7CE8;
}

.store-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.store-contact {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.store-address {
  font-size: 24rpx;
  color: #999;
}

.store-placeholder {
  padding: 30rpx 20rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  text-align: center;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
}

.placeholder-icon {
  font-size: 24rpx;
  color: #ccc;
}

/* 商品列表 */
.product-list {
  padding: 20rpx 0;
}

.product-item {
  padding: 20rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  background: #fafafa;
}

.product-info {
  display: flex;
  margin-bottom: 15rpx;
}

.product-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 6rpx;
  margin-right: 15rpx;
}

.product-details {
  flex: 1;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.product-code {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.product-price {
  font-size: 26rpx;
  color: #2E7CE8;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.product-stock {
  font-size: 22rpx;
  color: #999;
}

/* 数量控制 */
.quantity-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.quantity-label {
  font-size: 26rpx;
  color: #333;
}

.quantity-selector {
  display: flex;
  align-items: center;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  overflow: hidden;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f5f5f5;
  border: none;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: center;
}

.quantity-btn::after {
  border: none;
}

.quantity-input {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  border: none;
  background: white;
}

/* 商品操作 */
.item-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-total {
  font-size: 28rpx;
  color: #2E7CE8;
  font-weight: bold;
}

.remove-btn {
  background: #ff4d4f;
  color: white;
  border: none;
  border-radius: 15rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
}

.remove-btn::after {
  border: none;
}

/* 空状态 */
.empty-products {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.add-first-product {
  background: #2E7CE8;
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 40rpx;
  font-size: 28rpx;
}

.add-first-product::after {
  border: none;
}

/* 表单项 */
.form-item {
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
  padding-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fafafa;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 15rpx 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fafafa;
  color: #333;
}

/* 订单汇总 */
.order-summary {
  background: white;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.summary-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
}

.summary-row.total {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 20rpx;
  margin-top: 10rpx;
}

.summary-row .label {
  font-size: 28rpx;
  color: #666;
}

.summary-row .value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.summary-row.total .label,
.summary-row.total .value {
  font-size: 32rpx;
  color: #2E7CE8;
  font-weight: bold;
}

/* 提交按钮 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  z-index: 100;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #2E7CE8;
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.submit-btn.disabled {
  background: #ccc;
  color: #999;
}

.submit-btn::after {
  border: none;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-content {
  width: 90%;
  max-height: 80%;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.product-modal {
  height: 80%;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 60rpx;
  height: 60rpx;
  background: #f5f5f5;
  border: none;
  border-radius: 50%;
  font-size: 36rpx;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-close::after {
  border: none;
}

/* 门店列表 */
.store-list {
  max-height: 600rpx;
  overflow-y: auto;
  padding: 20rpx;
}

.modal-store-item {
  padding: 25rpx;
  margin-bottom: 15rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  background: #fafafa;
}

.modal-store-item.selected {
  border-color: #2E7CE8;
  background: #f0f8ff;
}

/* 商品搜索 */
.product-search {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.search-input {
  height: 70rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 35rpx;
  background: #f5f5f5;
  font-size: 28rpx;
}

/* 商品弹窗列表 */
.product-modal-list {
  height: calc(100% - 160rpx);
  overflow-y: auto;
  padding: 20rpx;
}

.modal-product-item {
  display: flex;
  padding: 20rpx;
  margin-bottom: 15rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  background: #fafafa;
}

.modal-product-item .product-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.modal-product-item .product-info {
  flex: 1;
}

.modal-product-item .product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.modal-product-item .product-code {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.modal-product-item .product-price {
  font-size: 26rpx;
  color: #2E7CE8;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.modal-product-item .product-stock {
  font-size: 22rpx;
  color: #999;
}