/* pages/orders/list/list.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 状态统计 */
.stats-section {
  display: flex;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  border-right: 1rpx solid #f0f0f0;
}

.stat-item:last-child {
  border-right: none;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 状态筛选 */
.filter-tabs {
  display: flex;
  background: white;
  border-radius: 20rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #666;
  border-radius: 15rpx;
  position: relative;
}

.tab.active {
  color: #2E7CE8;
  background: #f0f8ff;
}

.count {
  font-size: 18rpx;
  background: #ff4d4f;
  color: white;
  padding: 2rpx 6rpx;
  border-radius: 8rpx;
  margin-left: 8rpx;
}

/* 订单列表 */
.order-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.order-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-item:last-child {
  border-bottom: none;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: white;
}

.order-status.pending { background: #faad14; }
.order-status.confirmed { background: #52c41a; }
.order-status.shipped { background: #1890ff; }
.order-status.completed { background: #52c41a; }
.order-status.cancelled { background: #f5222d; }

.order-store {
  margin-bottom: 15rpx;
}

.store-name {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
}

.store-contact {
  font-size: 24rpx;
  color: #999;
}

.order-items {
  margin-bottom: 20rpx;
}

.item-summary {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.order-amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #f5222d;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  border: none;
}

.action-btn.reject {
  background: #fff2f0;
  color: #f5222d;
}

.action-btn.confirm {
  background: #f6ffed;
  color: #52c41a;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  background: white;
  border-radius: 20rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.add-btn {
  background: #2E7CE8;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: #2E7CE8;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(46, 124, 232, 0.3);
  z-index: 999;
}

.fab .plus {
  color: white;
  font-size: 48rpx;
  font-weight: 300;
}