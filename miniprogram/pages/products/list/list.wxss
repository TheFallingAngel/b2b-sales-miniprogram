/* pages/products/list/list.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 头部统计 */
.stats-section {
  display: flex;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  border-right: 1rpx solid #f0f0f0;
}

.stat-item:last-child {
  border-right: none;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 搜索和筛选 */
.search-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-bar input {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 40rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 120rpx;
  height: 80rpx;
  background: #2E7CE8;
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.filter-bar {
  display: flex;
  align-items: center;
}

.picker {
  padding: 15rpx 30rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #666;
}

/* 商品列表 */
.product-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
}

.product-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
  position: relative;
}

.product-image image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.stock-badge {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  color: white;
}

.stock-badge.normal { background: #52c41a; }
.stock-badge.low { background: #ff4d4f; }

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.product-category {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.product-price {
  margin-bottom: 10rpx;
}

.current-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #f5222d;
}

.unit {
  font-size: 24rpx;
  color: #999;
}

.product-stats {
  display: flex;
  gap: 30rpx;
}

.product-stats text {
  font-size: 22rpx;
  color: #666;
}

.product-actions {
  display: flex;
  align-items: flex-end;
}

.action-btn {
  background: #2E7CE8;
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 15rpx 30rpx;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 0;
  background: white;
  border-radius: 20rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
}