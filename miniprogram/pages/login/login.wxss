/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #2E7CE8, #4A9EFF);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255,255,255,0.8);
}

.login-form {
  width: 100%;
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(0,0,0,0.1);
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 60rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  display: block;
}

.form-input {
  width: 100%;
  height: 88rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #333;
  background: #fafafa;
}

.form-input:focus {
  border-color: #2E7CE8;
  background: white;
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: #2E7CE8;
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
}

.login-btn:hover {
  background: #1769D0;
}

.login-btn.disabled {
  background: #ccc;
  color: #999;
}

.forgot-password {
  text-align: center;
  margin-top: 30rpx;
}

.forgot-link {
  font-size: 26rpx;
  color: #2E7CE8;
}

.demo-account {
  margin-top: 40rpx;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.demo-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  text-align: center;
}

.demo-info {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

.footer {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: rgba(255,255,255,0.6);
}